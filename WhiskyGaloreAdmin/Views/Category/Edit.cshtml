@model WhiskyGaloreAdmin.Models.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Product";
}

<script src="@Url.Content("~/Scripts/readonly.js")" type="text/javascript"></script>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Edit a category</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product details
                </div>
                <div class="panel-body">
                    <div class="row">
                        @Html.AntiForgeryToken()
                        <div class="col-lg-6">
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => Model.catId)
                            <div class="form-group">
                                @Html.LabelFor(model => model.categoryName, new { @class = "control-label col-lg-4" })
                                @Html.EditorFor(model => model.categoryName)
                                @Html.ValidationMessageFor(model => model.categoryName, String.Empty, new { @style = "color:red;!important" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.categoryDescrip, new { @class = "control-label col-lg-4" })
                                @Html.EditorFor(model => model.categoryDescrip)
                                @Html.ValidationMessageFor(model => model.categoryDescrip, String.Empty, new { @style = "color:red;!important" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.picURL, new { @class = "control-label col-lg-4" })
                                @Html.EditorFor(model => model.picURL)
                                @Html.ValidationMessageFor(model => model.picURL, String.Empty, new { @style = "color:red;!important" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.catInUse, new { @class = "control-label col-lg-4" })
                                @Html.EnumDropDownListFor(model => model.catInUse)
                                @Html.ValidationMessageFor(model => model.catInUse, String.Empty, new { @style = "color:red;!important" })
                            </div>
                        </div>
                    </div>
                    <div id="btn" class="col-lg-6">
                        <button type="submit" class="btn btn-default" value="Update" name="command">Update</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
}

<div>
    @Html.ActionLink("Back to List", "Details")
</div>



