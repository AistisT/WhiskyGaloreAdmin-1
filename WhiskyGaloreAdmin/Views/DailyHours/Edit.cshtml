@model WhiskyGaloreAdmin.Models.DailyHours
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "DailyHours";
}
<script src="@Url.Content("~/Scripts/readonly.js")" type="text/javascript"></script> 
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Daily staff hours</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm("Edit", "DailyHours", FormMethod.Post))
{
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                  Update daily staff hours
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.staffFullname, new { @class = "control-label col-lg-3" })
                                @Html.EditorFor(model => model.staffFullname, new { @class = "form-control col-lg-9" })
                                @Html.ValidationMessageFor(model => model.staffFullname , String.Empty, new { @style = "color:red;!important" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.staffId, new { @class = "control-label col-lg-3" })
                                @Html.EditorFor(model => model.staffId, new { @class = "form-control col-lg-9" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.currentDate, new { @class = "control-label col-lg-3" })
                                @Html.EditorFor(model => model.currentDate, new { @class = "form-control col-lg-9" })
                                
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.hours, new { @class = "control-label col-lg-3" })
                                @Html.EditorFor(model => model.hours, new { @class = "form-control col-lg-9" })
                                @Html.ValidationMessageFor(model => model.hours, String.Empty, new { @style = "color:red;!important", id = "hoursWorked" })

                            </div>
                        </div>
                        <div id="btn" class="col-lg-6">
                            <button type="submit" class="btn btn-default" value="Update" name="command">Update</button>
                            <button type="submit" class="btn btn-default" value="Delete" name="command" onclick="return confirmation();">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
