@model WhiskyGaloreAdmin.Models.Manager
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Country Sales Statistics</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Country Sales Statistics
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Country</th>
                                <th>Number of Orders</th>
                                <th>Total Sales Value</th>
                                <th>Total Shipping Cost</th>
                                <th>Profit</th>
                                <th>Average Order Value</th>
                                <th>Average Order Profit</th>
                                <th>Re-Calculate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.dt.Rows.Count; i++)
                            {
                                <tr class="odd gradeX">
                                    <td>@(Model.dt.Rows[i]["country"].ToString())</td>
                                    <td>@(Model.dt.Rows[i]["numberOfOrders"].ToString()) </td>
                                    <td>@(Model.dt.Rows[i]["salesValue"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["shippingCost"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["profit"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["averageOrderValue"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["averageOrderProfit"].ToString()) £</td>
                                    <td>@Html.ActionLink("Re-Calculate", "CalculateCountry", null, new { country = Model.dt.Rows[i]["country"].ToString() }, null)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
