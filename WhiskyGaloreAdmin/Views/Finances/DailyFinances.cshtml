@model WhiskyGaloreAdmin.Models.Manager
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Daily Finances</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Daily Finances
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Revenue</th>
                                <th>Expenses</th>
                                <th>Wages</th>
                                <th>Profit</th>
                                <th>Balance</th>
                                <th>Calculate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.dt.Rows.Count; i++)
                            {
                                <tr class="odd gradeX">
                                    <td>@(Model.dt.Rows[i]["date"].ToString().AsDateTime().ToShortDateString())</td>
                                    <td>@(Model.dt.Rows[i]["revenue"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["expenses"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["wages"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["profit"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["balance"].ToString()) £</td>
                                    <td>@Html.ActionLink("Calculate", "Calculate", null, new { dailyDate = Model.dt.Rows[i]["date"] }, null)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
