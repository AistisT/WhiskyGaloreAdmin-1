@model WhiskyGaloreAdmin.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<!-- DataTables CSS -->
<link href="@Url.Content("~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.css")" rel="stylesheet" type="text/css" />
<!-- DataTables Responsive CSS -->
<link href="@Url.Content("~/bower_components/datatables-responsive/css/dataTables.responsive.css")" rel="stylesheet" type="text/css" />

<link href="@Url.Content("~/bower_components/morrisjs/morris.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/bower_components/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
<!-- Navigation -->
<!-- jQuery -->
@Scripts.Render("~/bundles/jquery")
<script src="@Url.Content("~/bower_components/jquery/dist/jquery.min.js")"></script>
@Scripts.Render("~/bundles/bootstrap")
<script src="@Url.Content("~/bower_components/metisMenu/dist/metisMenu.min.js")"></script>

@Scripts.Render("~/bundles/jqueryval")
<script src="@Url.Content("~/Scripts/jquery-1.6.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        @Html.ActionLink("Whisky Galore Admin", "Index", new { controller = "Home" }, new { @class = "navbar-brand" })
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">

                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form">
                            <fieldset>
                                @Html.ValidationSummary(true, "", new { @style = "color:red;!important" })
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.LabelFor(model => model.username, new { @class = "control-label col-lg-4" })
                                    @Html.EditorFor(model => model.username, new { @class = "form-control col-lg-8" })
                                    @Html.ValidationMessageFor(model => model.username, String.Empty, new { @style = "color:red;!important" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.password, new { @class = "control-label col-lg-4" })
                                    @Html.PasswordFor(model => model.password)
                                    @Html.ValidationMessageFor(model => model.password, String.Empty, new { @style = "color:red;!important" })
                                </div>
                                <div id="btn" class="col-lg-6 center-block">
                                    <button type="submit" class="btn-block">Login</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
