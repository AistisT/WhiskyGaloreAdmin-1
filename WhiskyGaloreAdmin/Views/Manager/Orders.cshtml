
@model WhiskyGaloreAdmin.Models.Manager
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Orders</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Order List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Order Date</th>
                                <th>Tax</th>
                                <th>Discount</th>
                                <th>Shipping Cost</th>
                                <th>Total Price</th>
                                <th>Paid</th>
                                <th>Delivery Status</th>
                                <th>Required Date</th>
                                <th>Dispatch Date</th>
                                <th>Delivery Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.dt.Rows.Count; i++)
                            {
                                <tr class="odd gradeX">
                                    <td>@(Model.dt.Rows[i]["orderId"].ToString())</td>
                                    <td>@(Model.dt.Rows[i]["orderDate"].ToString().AsDateTime().ToShortDateString())</td>
                                    <td>@(Model.dt.Rows[i]["tax"].ToString())</td>
                                    <td>@(Model.dt.Rows[i]["discount"].ToString())</td>
                                    <td>@(Model.dt.Rows[i]["shippingCost"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["totalPrice"].ToString()) £</td>
                                    <td>@(Model.dt.Rows[i]["paid"].ToString())</td>
                                    <td>@(Model.dt.Rows[i]["orderStatus"].ToString())</td>
                                    <td>@(Model.dt.Rows[i]["requiredDate"].ToString().AsDateTime().ToShortDateString())</td>
                                    <td>@(Model.dt.Rows[i]["dispatchedDate"].ToString().AsDateTime().ToShortDateString())</td>
                                    <td>@(Model.dt.Rows[i]["deliveredDate"].ToString().AsDateTime().ToShortDateString())</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
