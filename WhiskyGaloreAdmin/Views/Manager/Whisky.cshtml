
@model WhiskyGaloreAdmin.Models.Manager
@{
    ViewBag.Title = "Whisky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Whisky</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                 Whisky List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Barcode</th>
                                <th>Product Name</th>
                                <th>Description</th>
                                <th>Unit Price</th>
                                <th>MSRP</th>
                                <th>Units in Stock</th>
                                <th>Unit weight</th>
                                <th>Quentity per Unit</th>
                                <th>Wholesale</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for(int i=0; i< Model.dt.Rows.Count; i++) {
                            <tr class="odd gradeX">
                                <td>@(Model.dt.Rows[i]["productId"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["barcode"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["productName"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["prodDescription"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["unitPrice"].ToString()) £</td>
                                <td>@(Model.dt.Rows[i]["mrrp"].ToString()) £</td>
                                <td>@(Model.dt.Rows[i]["unitsInStock"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["unitWeight"].ToString()) kg</td>
                                <td>@(Model.dt.Rows[i]["quantityPerUnit"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["wholesale"].ToString())</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


