
@model WhiskyGaloreAdmin.Models.Manager
@{
    ViewBag.Title = "Whisky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Whisky</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                 Whisky List
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">

                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Barcode</th>
                                <th>Product Name</th>
                                <th>Description</th>
                                <th>Unit Price</th>
                                <th>MSRP</th>
                                <th>Units in Stock</th>
                                <th>Unit weight</th>
                                <th>Quentity per Unit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for(int i=0; i< Model.dt.Rows.Count; i++) {
                            <tr class="odd gradeX">
                                <td>@(Model.dt.Rows[i]["productId"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["barcode"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["productName"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["prodDescription"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["unitPrice"].ToString()) £</td>
                                <td>@(Model.dt.Rows[i]["mrrp"].ToString()) £</td>
                                <td>@(Model.dt.Rows[i]["unitsInStock"].ToString())</td>
                                <td>@(Model.dt.Rows[i]["unitWeight"].ToString()) kg</td>
                                <td>@(Model.dt.Rows[i]["quantityPerUnit"].ToString())</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
                <div class="well">
                    <h4>DataTables Usage Information</h4>
                    <p>DataTables is a very flexible, advanced tables plugin for jQuery. In SB Admin, we are using a specialized version of DataTables built for Bootstrap 3. We have also customized the table headings to use Font Awesome icons in place of images. For complete documentation on DataTables, visit their website at <a target="_blank" href="https://datatables.net/">https://datatables.net/</a>.</p>
                    <a class="btn btn-default btn-lg btn-block" target="_blank" href="https://datatables.net/">View DataTables Documentation</a>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


