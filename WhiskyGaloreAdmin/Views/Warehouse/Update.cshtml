@model WhiskyGaloreAdmin.Models.Warehouse
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Order @Html.DisplayFor(model => model.id)</h1>

    </div>
    <!-- /.col-lg-12 -->
</div>
@using (Html.BeginForm("Update", "Warehouse", FormMethod.Post))
{
    @Html.HiddenFor(model => model.id);
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Order Content
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Product</th>
                                    <th>Barcode</th>
                                    <th>Units</th>
                                    <th>Unit Price</th>
                                    <th>Price</th>
                                    <th>Unit Weight</th>
                                    <th>Weight</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.dt.Rows.Count; i++)
                                    {
                                    <tr class="odd gradeX">
                                        <td>@(Model.dt.Rows[i]["productId"].ToString())</td>

                                        <td>@(Model.dt.Rows[i]["categoryName"].ToString() + " - " + Model.dt.Rows[i]["productName"].ToString())</td>
                                        <td>@(Model.dt.Rows[i]["barcode"].ToString())</td>
                                        <td>@(Model.dt.Rows[i]["units"].ToString())</td>
                                        <td>@(Model.dt.Rows[i]["unitPrice"].ToString()) £</td>
                                        <td>@(Model.dt.Rows[i]["price"].ToString()) £</td>
                                        <td>@(Model.dt.Rows[i]["unitWeight"].ToString()) Kg</td>
                                        <td>@(Model.dt.Rows[i]["weight"].ToString()) Kg</td>
                                    </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Order Details
                        </div>

                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.orderStatus, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.orderStatus, new { @class = "control-label col-lg-8" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.orderDate, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.orderDate, "{0:yyyy-MM-dd}", new { type = "date" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.shipper, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.shipper, new { @class = "control-label col-lg-8" })
                                    </div>
                                </div>
                                <div class="col-lg-6">

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.tax, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.tax, new { @class = "control-label col-lg-8" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.sCost, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.sCost, new { @class = "control-label col-lg-8" })  £
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.price, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.price, new { @class = "control-label col-lg-8" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Customer Contact
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.type, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.type, new { @class = "control-label col-lg-8" })
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.fNumber, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.fNumber, new { @class = "control-label col-lg-8" })
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.fax))
                            {
                            <div class="form-group">
                                @Html.LabelFor(model => model.fax, new { @class = "control-label col-lg-4" })
                                @Html.DisplayFor(model => model.fax, new { @class = "control-label col-lg-8" })
                            </div>
                            }
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.name, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.name, new { @class = "control-label col-lg-8" })
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.sNumber))
                            {
                            <div class="form-group">
                                @Html.LabelFor(model => model.sNumber, new { @class = "control-label col-lg-4" })
                                @Html.DisplayFor(model => model.sNumber, new { @class = "control-label col-lg-8" })
                            </div>
                            }

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.email, new { @class = "control-label col-lg-4" })
                                        @Html.DisplayFor(model => model.email, new { @class = "control-label col-lg-8" })
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.address, new { @class = "control-label col-lg-2" })
                                        @Html.DisplayFor(model => model.address, new { @class = "control-label col-lg-10" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Update Order Status
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.cStatus, new { @class = "control-label col-lg-4" })
                                        @Html.EnumDropDownListFor(model => model.cStatus)
                                        @Html.ValidationMessageFor(model => model.cStatus, String.Empty, new { @style = "color:red;!important" })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.currentDate, new { @class = "control-label col-lg-4" })
                                        @Html.TextBoxFor(model => model.currentDate, "{0:yyyy-MM-dd}", new { type = "date" })
                                        @Html.ValidationMessageFor(model => model.currentDate, String.Empty, new { @style = "color:red;!important" })
                                    </div>
                                </div>
                                <div id="btn" class="col-lg-6">
                                    <button type="submit" class="btn btn-default" value="Update" name="command">Update</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
